# Database Configuration
# Options: mysql or sqlite
DB_TYPE=mysql

# MySQL Configuration (only used if DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=onvif_vms
DB_USER=vms_user
DB_PASSWORD=MyVms@123

# SQLite Configuration (only used if DB_TYPE=sqlite)
# No additional configuration needed - uses onvif_vms.db in server folder

# Server Configuration
PORT=3001
NODE_ENV=development

# Session Configuration
SESSION_SECRET=MyVms@123
SESSION_TIMEOUT=3600

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# File Storage
RECORDINGS_PATH=./public/recordings
HLS_PATH=./public/hls
MAX_STORAGE_GB=100

# FFmpeg Configuration
FFMPEG_PATH=ffmpeg
FFMPEG_THREADS=4

# Auto Recording Defaults
AUTO_RECORD_CHUNK_DURATION=1
AUTO_RECORD_QUALITY=medium
AUTO_RECORD_RETENTION_DAYS=30

# WebRTC Configuration (optional)
WEBRTC_ENABLED=true
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302

# Motion Detection
MOTION_DETECTION_SENSITIVITY=50
MOTION_DETECTION_THRESHOLD=25

# Email Notifications (optional)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@vms.local

# Performance Tuning
MAX_CONCURRENT_STREAMS=10
STREAM_BUFFER_SIZE=1048576
DATABASE_POOL_SIZE=10

# Security
ENABLE_HTTPS=false
HTTPS_CERT_PATH=
HTTPS_KEY_PATH=
BCRYPT_ROUNDS=10

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Required for Auth Token
JWT_SECRET=MyVms@123
JWT_EXPIRES_IN=24h

# Motion Detection
MOTION_DETECTION_ENABLED=true
MOTION_WEBSOCKET_PORT=3002
MOTION_MAX_CONCURRENT_CAMERAS=5000
MOTION_WORKER_THREADS=10
MOTION_BATCH_SIZE=10

# Object Detection Model
MODEL_URL=https://tfhub.dev/tensorflow/ssd_mobilenet_v2
MODEL_CACHE_DIR=./models

# Alert Settings
ALERT_RETENTION_TIME=3600000
ALERT_SOUND_ENABLED=true
ALERT_EMAIL_ENABLED=false

# Discovery Configuration
DISCOVERY_INTERVAL=300000  # 5 minutes
MAX_DEVICES_PER_PAGE=100
DB_TYPE=mysql
NETWORK_SCAN_TIMEOUT=5000
DISCOVERY_TIMEOUT=30000
ENABLE_NETWORK_SCAN=true
NETWORK_SCAN_RANGES=192.168.1.0/24,192.168.226.0/24,192.168.236.0/24
MAX_DEVICES=15000
DISCOVERY_BATCH_SIZE=50

# Database Configuration
DB_CONNECTION_LIMIT=100
DB_QUEUE_LIMIT=0
DB_ACQUIRE_TIMEOUT=60000
DB_IDLE_TIMEOUT=10000

# Streaming Configuration
MAX_CONCURRENT_STREAMS=500
STREAM_SEGMENT_DURATION=2
STREAM_SEGMENT_COUNT=10
STREAM_STARTUP_TIMEOUT=15000

# Performance Tuning
NODE_OPTIONS="--max-old-space-size=8192"
UV_THREADPOOL_SIZE=128